{
    "version": 2,
    "name": "carlosbar√ßante",
    "builds": [
        {
            "src": "package.json",
            "use": "@vercel/node",
            "config": {
                "env": {
                    "NODE_ENV": "production"
                },
                "command": "npm run build && npm run start"
            }
        },
        {
            "src": "./frontend/build",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/server.js"
        }
    ]
}